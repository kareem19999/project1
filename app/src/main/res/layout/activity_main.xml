<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:clickable="true">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="64dp"
            app:autoSizeTextType="none"
            android:textColorLink="@color/colorAccent" android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="50dp"
            app:layout_constraintVertical_bias="0.262" android:id="@+id/textView"/>
    <Button
            android:id="@+id/button"
            android:text="My Name"
            android:layout_width="88dp"
            android:layout_height="46dp"
            android:layout_marginTop="207dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" android:layout_marginRight="148dp" android:layout_marginBottom="87dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="sendMessage"/>
    <EditText
            android:id="@+id/editText"
            android:text="Karim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>